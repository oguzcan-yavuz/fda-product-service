{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testMatch": ["<rootDir>/test/unit/**/*.spec.ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/main.ts",
    "!src/**/*.repository.ts",
    "!src/**/*.model.ts",
    "!src/**/*.module.ts"
  ],
  "coverageDirectory": "coverage",
  "testEnvironment": "node"
}
